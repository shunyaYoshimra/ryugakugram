
<div class="user-edit-wrapper">
  <div class="edit-title">Your Profile</div>
    
    <%= form_with model: @user, html: { class: "topBefore"} do |f| %>
    <label class="edit-file-label" for="user_image">
      <div>
      <% if @user.image.attached? %>
      <%= image_tag @user.image %>
      <% else %>
        <%= image_tag "/assets/default.jpg" %>
      <% end %>
      </div>
      <%= f.file_field :image %>
    </label>
    <%= f.text_field :name, placeholder: "NAME", class: "edit-form" %>
    <%= f.text_area :profile, placeholder: "Your Profile", class: "edit-form"%>
    <%= f.text_field :country, placeholder: "The country where you've studied abroad or you'd like to study abroad.", class: "edit-form"%>
    <%= f.submit "GO", class: "edit-form", id: "edit-submit"%>
    
    <% end %>
  </div>
  
