<section class="get-in-touch">
   <h1 class="title">Sign Up</h1>
   
   <%= form_with model: @user, local: true, html: { class: "contact-form "} do |f| %>
      <div class="form-field col x-50">
         <%= f.text_field :name, class: "input-text js-input"%>
         <%= f.label :name, class: "label" %>
      </div>
      <div class="form-field col x-50">
        <%= f.email_field :email, class: "input-text js-input"%>
        <%= f.label :email, class: "label" %>
      </div>
      <div class="form-field col x-100">
         <%= f.password_field :password, class: "input-text js-input"%>
         <%= f.label :password, class: "label" %>
      </div>
      <div class="form-field col x-100">
         <%= f.password_field :password_confirmation, class: "input-text js-input"%>
         <%= f.label :password_confirmation, class: "label" %>
      </div>
      <div class="form-field col x-100 align-center">
        <%= f.submit "submit", class: "submit-btn" %>
      </div>
   <% end %>
</section>


<script>
$( '.js-input' ).keyup(function() {
  if( $(this).val() ) {
     $(this).addClass('not-empty');
  } else {
     $(this).removeClass('not-empty');
  }
});
</script>
